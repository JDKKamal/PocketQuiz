<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/big"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/large"
    android:paddingRight="@dimen/large">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_iv"
        android:padding="@dimen/tiny"
        android:layout_height="@dimen/drawer_iv" />

    <Space
        android:layout_width="10dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/TextRegularSizeMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/extraTiny"
        android:layout_marginRight="@dimen/extraTiny"
        android:textColor="?android:textColorPrimary" />

</LinearLayout>