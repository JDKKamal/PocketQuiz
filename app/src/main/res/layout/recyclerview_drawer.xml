<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appIvLogo"
        android:layout_marginLeft="@dimen/drawer_margin_left"
        android:layout_marginRight="@dimen/drawer_margin_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="1"
        android:src="@drawable/paper_plane" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextSemiBoldSizeRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/drawer_margin_left"
        android:paddingRight="@dimen/drawer_margin_left"
        android:paddingStart="@dimen/drawer_margin_left"
        android:text="@string/username" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextRegularSizeMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/medium"
        android:layout_marginTop="@dimen/small"
        android:paddingRight="@dimen/drawer_margin_left"
        android:paddingStart="@dimen/drawer_margin_left"
        android:text="@string/email" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="240dp"
        android:layout_height="wrap_content" />

</LinearLayout>